 } */
    stage('Build and Push Docker Image') {
      steps {
        sh label: '', script: '''sudo docker build -t gameoflife-image:$BUILD_NUMBER .
                                 sudo docker tag gameoflife-image:$BUILD_NUMBER docker.io/sumanthsainooka/gameoflife-image:$BUILD_NUMBER
